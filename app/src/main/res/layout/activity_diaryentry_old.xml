<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    android:paddingTop="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="213dp"
        android:layout_weight="0.99"
        android:weightSum="1"
        android:id="@+id/layoutCategories">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layoutDurationCategories">

            <TextView
                android:text="Zeit pro Kategorie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView9"
                android:background="#e8eaf6"
                android:textStyle="normal|bold"
                android:textSize="16sp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="75dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.86">

                    <TextView
                        android:text="Leistungstests:"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView12"
                        android:layout_weight="0.86"
                        android:layout_width="match_parent"
                        android:textSize="15sp" />

                    <TextView
                        android:text="Training:"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView3"
                        android:layout_weight="0.86"
                        android:textSize="15sp" />

                    <TextView
                        android:text="Wellness:"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView7"
                        android:layout_weight="0.86"
                        android:textSize="15sp" />

                    <TextView
                        android:text="Reiner Aufenthalt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView10"
                        android:layout_weight="0.86"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="75dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.86">

                    <TextView
                        android:text="00:00 h"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtTimeLeistungstests"
                        android:layout_weight="1"
                        android:textSize="15sp"
                        android:textAlignment="center" />

                    <TextView
                        android:text="00:00 h"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtTimeTraining"
                        android:layout_weight="1"
                        android:textSize="15sp"
                        android:textAlignment="center" />

                    <TextView
                        android:text="00:00 h"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtTimeWellness"
                        android:layout_weight="1"
                        android:textSize="15sp"
                        android:textAlignment="center" />

                    <TextView
                        android:text="00:00 h"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtTimeAufenthalt"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:textSize="15sp"
                        android:textAlignment="center" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layoutPointsCategories">

            <TextView
                android:text="Punkte pro Kategorie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView21"
                android:background="#e8eaf6"
                android:textStyle="normal|bold"
                android:textSize="16sp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="75dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:text="Leistungstests:"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView15"
                        android:layout_weight="1" />

                    <TextView
                        android:text="Training:"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView17"
                        android:layout_weight="1" />

                    <TextView
                        android:text="Wellness:"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView16"
                        android:layout_weight="1" />

                    <TextView
                        android:text="Reiner Aufenthalt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView19"
                        android:layout_weight="1" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="75dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:text="00:00 h"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView13"
                        android:layout_weight="1"
                        android:textAlignment="center" />

                    <TextView
                        android:text="00:00 h"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView20"
                        android:layout_weight="1"
                        android:textAlignment="center" />

                    <TextView
                        android:text="00:00 h"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView14"
                        android:layout_weight="1"
                        android:textAlignment="center" />

                    <TextView
                        android:text="00:00 h"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView18"
                        android:layout_weight="1"
                        android:textAlignment="center" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Gesamt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"
                android:background="#e8eaf6"
                android:textStyle="normal|bold"
                android:textSize="16sp" />

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:id="@+id/relativeLayout1"
                android:background="#ffffffff"
                android:layout_height="70dp">

                <ImageView
                    app:srcCompat="@android:drawable/ic_lock_idle_alarm"
                    android:id="@+id/imageView2"
                    android:layout_width="50dp"
                    android:layout_weight="1"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:padding="8dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentTop="true"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:layout_height="50dp" />

                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/linearLayout1"
                    android:paddingLeft="150dp"
                    android:paddingRight="16dp"
                    android:paddingBottom="15dp"
                    android:paddingTop="5dp"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true">

                    <TextView
                        android:text="Zeit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtExercise"
                        android:textSize="15sp"
                        android:textColor="#9e9e9e" />

                    <TextView
                        android:text="00:00"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/txtTotalTime"
                        android:textSize="22sp"
                        android:textColor="#ff000000"
                        android:textAlignment="center"
                        android:padding="0dp"
                        android:layout_margin="0dp" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:id="@+id/relativeLayout1"
                android:background="#ffffffff"
                android:layout_height="70dp">

                <ImageView
                    app:srcCompat="@drawable/weight_icon"
                    android:id="@+id/imageView2"
                    android:layout_width="50dp"
                    android:layout_weight="1"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:padding="8dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentTop="true"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:layout_height="50dp"
                    />

                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/linearLayout1"
                    android:paddingLeft="150dp"
                    android:paddingRight="16dp"
                    android:paddingBottom="15dp"
                    android:paddingTop="7dp"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true">

                    <TextView
                        android:text="Punkte"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtExercise"
                        android:textSize="15sp"
                        android:textColor="#9e9e9e" />

                    <TextView
                        android:text="0 Pkt."
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/txtTotalPoints"
                        android:textSize="22sp"
                        android:textColor="#ff000000"
                        android:textAlignment="center"
                        android:padding="0dp"
                        android:layout_margin="0dp" />
                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
